doctype html
extends ../_bootstrap
append styles
	// Custom styles for this template
	link(href='/stylesheets/dashboard.css', rel='stylesheet')
	script(type='text/javascript' src='http://code.jquery.com/jquery.min.js')
	script(src='/javascripts/myScript.js')
	script(src='https://maps.googleapis.com/maps/api/js?callback=initMap', async, defer)

block body  
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') Final Project
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='#') Dashboard
					li
						a(href='#') Settings
					li
						a(href='#') Profile
					li
						a(href='#') Help
				form.navbar-form.navbar-right
					input.form-control(type='text', placeholder='Search...')
	.container-fluid
		.row
			.col-sm-12
				table.table.table-striped
						thead
							tr
								th Salutaion
								th First Name
								th Last Name
								th Street
								th City
								th State
								th Zip
								th Phone
								th Email
								th Contact by Mail
								th Contact by Phone
								th Contact by Email
								th 
								th
								
						tbody
							each contact, i in contactlist
								tr
									td #{contact.salutation}
									td #{contact.fname}
									td #{contact.lname}
									td #{contact.street}
									td #{contact.city}
									td #{contact.state}
									td #{contact.zip}
									td #{contact.phone}
									td #{contact.email}
									td #{contact.cmail}
									td #{contact.cphone}
									td #{contact.cemail}
									td 
										button.btn.btn-default(type='button', aria-label='Left Align')
											span.glyphicon.glyphicon-pencil.edit-button(aria-hidden='true', id='#{contact._id}')
									td
										button.btn.btn-default(type='button', aria-label='Left Align')
											span.glyphicon.glyphicon-trash.update-button(aria-hidden='true', id='#{contact._id}')